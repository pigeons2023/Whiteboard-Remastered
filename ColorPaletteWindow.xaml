<Window x:Class="YourNamespace.ColorPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="选择颜色" Height="200" Width="250"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10,40,10,10">
        <ListBox x:Name="lstColors" Height="200" Visibility="Collapsed"/>
        <Button x:Name="btnCustomColor" Content="自定义颜色..." Margin="5" Click="BtnCustomColor_Click" Height="45"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnOk" Content="确定" Margin="5" Click="BtnOk_Click" Height="30" Width="45"/>
            <Button x:Name="btnCancel" Content="取消" Margin="5" Click="BtnCancel_Click" Width="45"/>
        </StackPanel>
    </StackPanel>
</Window>
