<Window x:Class="WhiteboardApp.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="关于" Height="400" Width="500"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <SolidColorBrush Color="#FFF0F0F0"/>
    </Window.Background>
    <Border CornerRadius="15" Background="White" Margin="10">
        <Grid>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="白板应用" FontWeight="Bold" FontSize="36" Height="50"/>
                <TextBlock Height="44"><Run Text="版本 1.0" FontSize="16"/><LineBreak/><Run Text="制作者"/><Run Language="zh-cn" Text=" pigeons2023" FontSize="16"/></TextBlock>
                <TextBlock Text="© 2024 白板软件 " FontSize="16" Height="30"/>
                <TextBlock Text="简介" FontWeight="Bold" FontSize="22" Height="32"/>
                <TextBlock Text="这是一个简单的白板应用，您可以使用不同的颜色和粗细绘制。" FontSize="16" Height="18" TextWrapping="Wrap" Width="400"/>
            </StackPanel>
        </Grid>
    </Border>
    <Window.Effect>
        <DropShadowEffect Color="Gray" Direction="320" ShadowDepth="5" BlurRadius="10"/>
    </Window.Effect>
</Window>
