<Window x:Class="WhiteboardApp.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="关于" Height="400" Width="500"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <SolidColorBrush Color="#FFF0F0F0"/>
    </Window.Background>
    <Border CornerRadius="15" Background="White" Margin="10">
        <Grid>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="白板应用" FontWeight="Bold" FontSize="36" Height="60" LineHeight="2"/>
                <TextBlock Height="26"><Run FontSize="16" Text="版本 1.0"/></TextBlock>
                <TextBlock Height="26"><Run FontSize="16" Text="制作者"/><Run Text=" "/><Run FontSize="16" Text=" pigeons2023"/></TextBlock>
                <TextBlock Text="© 2024 白板软件" FontSize="16" Height="30"/>
                <TextBlock Text="简介" FontWeight="Bold" FontSize="22" Height="40"/>
                <TextBlock Height="26" Text="白板轻舞，彩墨纷飞，粗细间流转，绘出诗意世界。" FontSize="16" TextWrapping="Wrap" Width="372" LineHeight="1.4"/>
            </StackPanel>
        </Grid>
    </Border>
    <Window.Effect>
        <DropShadowEffect Color="Gray" Direction="320" ShadowDepth="5" BlurRadius="10"/>
    </Window.Effect>
</Window>
